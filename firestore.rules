
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
      
      match /dailyLogs/{logId} {
        allow read: if request.auth.uid != null;
        allow create: if request.auth.uid != null;
      }

      match /documents/{docId} {
        allow read: if request.auth.uid != null;
        allow create, delete: if request.auth.uid != null && isAdmin();
      }
    }
    
    match /clients/{clientId} {
      allow read, write: if request.auth.uid != null;
      
      match /interactions/{interactionId} {
        allow read, create: if request.auth.uid != null;
      }

      match /contracts/{contractId} {
        allow read: if request.auth.uid != null;
        allow create, delete: if request.auth.uid != null && isAdmin();
      }
    }

    match /suppliers/{supplierId} {
      allow read, write: if request.auth.uid != null;

      match /contracts/{contractId} {
        allow read: if request.auth.uid != null;
        allow create, delete: if request.auth.uid != null && isAdmin();
      }
    }

    match /activityLog/{logId} { allow read: if request.auth.uid != null; }
    match /accounts/{accountId} { 
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /employees/{employeeId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /inventory/{itemId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /inventoryCategories/{categoryId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /materialRequests/{requestId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /procurement/{procurementId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
    match /transactions/{transactionId} {
      allow read: if request.auth.uid != null;
      allow write: if request.auth.uid != null && isAdmin();
    }
  }
}
