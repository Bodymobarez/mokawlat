rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to access business collections.
    // In a production app, you would restrict this based on user roles.
    match /clients/{docId} { allow read, write: if request.auth != null; }
    match /employees/{docId} { allow read, write: if request.auth != null; }
    match /inventory/{docId} { allow read, write: if request.auth != null; }
    match /projects/{docId} { allow read, write: if request.auth != null; }
    match /procurement/{docId} { allow read, write: if request.auth != null; }
    match /suppliers/{docId} { allow read, write: if request.auth != null; }
  }
}
