
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Default read access for all authenticated users
    match /{document=**} {
      allow read: if request.auth != null;
    }
    
    // Users can read their own profile, admins can read any profile
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow write: if isAdmin();
    }

    match /projects/{projectId} {
        allow write: if isAdmin();
    }
    
    match /projects/{projectId}/dailyLogs/{logId} {
        allow create, read: if request.auth != null;
    }

    match /employees/{employeeId} {
        allow write: if isAdmin();
    }
    
    match /suppliers/{supplierId} {
        allow write: if isAdmin();
    }

    match /inventory/{itemId} {
        allow write: if isAdmin();
    }
    
    match /inventoryCategories/{categoryId} {
        allow write: if isAdmin();
    }

    match /procurement/{requestId} {
        allow write: if isAdmin();
    }

    match /clients/{clientId} {
        allow write: if isAdmin();
    }
    
    match /clients/{clientId}/interactions/{interactionId} {
      allow create: if request.auth != null; // Any user can log an interaction
      allow read, update, delete: if isAdmin();
    }
    
    match /clients/{clientId}/contracts/{contractId} {
        allow create, delete: if isAdmin();
    }
    
    match /suppliers/{supplierId}/contracts/{contractId} {
        allow create, delete: if isAdmin();
    }

    match /transactions/{transactionId} {
        allow write: if isAdmin();
    }

    match /accounts/{accountId} {
        allow write: if isAdmin();
    }
    
    match /materialRequests/{requestId} {
        allow create: if request.auth != null;
        allow update: if isAdmin(); // Only admin can approve/reject
    }

    // Activity log is append-only for the system (via server actions)
    // and readable by all authenticated users.
    match /activityLog/{logId} {
        allow create; // Handled by server-side actions
        allow read: if request.auth != null;
    }
  }
}
