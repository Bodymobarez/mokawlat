rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      // This function can only be called if the user has read access to their own user document.
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Specific Collection Rules ---

    // All authenticated users can read any user's profile information.
    // Only an admin can change another user's role.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Any authenticated user can read from any top-level collection.
    // This simplifies rules for an internal ERP where most data is not secret among employees.
    match /{collection}/{docId} {
      allow read: if isAuthenticated();
    }
    
    // Any authenticated user can read from any subcollection.
    match /{collection}/{docId}/{subcollection}/{subDocId} {
       allow read: if isAuthenticated();
    }

    // --- Global Write Rules ---
    // Admins have universal write access. This is a simple, powerful rule for admin functionality.
    // Specific write rules for non-admins are defined below and will grant additional permissions.
    match /{document=**} {
      allow write: if isAdmin();
    }

    // --- Specific Write Access for Non-Admins ---

    // Allow authenticated users to create daily logs in a project.
    match /projects/{projectId}/dailyLogs/{logId} {
      allow create: if isAuthenticated();
    }

    // Allow authenticated users to update a task's status (for the Kanban board).
    match /projects/{projectId}/tasks/{taskId} {
      allow update: if isAuthenticated();
    }

    // Allow authenticated users to create material requests.
    match /materialRequests/{requestId} {
      allow create: if isAuthenticated();
    }
    
    // Allow authenticated users to create interactions with clients.
    match /clients/{clientId}/interactions/{interactionId} {
      allow create: if isAuthenticated();
    }
  }
}
