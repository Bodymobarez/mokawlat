rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can read their own profile, admins can read/write all.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth != null;
      allow update: if isAdmin(); // Only admins can change roles, etc.
      allow delete: if false; // Don't allow deleting user docs
    }

    // Activity log can be created by any user, but not modified.
    match /activityLog/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Main data collections: read for any user, write only for admin
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /employees/{employeeId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /suppliers/{supplierId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /inventory/{itemId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
     match /procurement/{requestId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /transactions/{transactionId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    match /accounts/{accountId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
    
    // Client data: any user can log interactions, only admins can modify client details
    match /clients/{clientId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
        
        match /interactions/{interactionId} {
            allow read, write: if request.auth != null;
        }
        
        match /contracts/{contractId} {
            allow read: if request.auth != null;
            allow write: if isAdmin();
        }
    }
    
    // Supplier contracts: only admins can write
    match /suppliers/{supplierId}/contracts/{contractId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }

    // Material requests can be created by any user, only updated by admin
    match /materialRequests/{requestId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isAdmin();
      allow delete: if false;
    }
  }
}
