rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to users collection for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write access to employees collection for authenticated users
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read/write access to projects collection for authenticated users
    match /projects/{projectId} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to suppliers collection for authenticated users
    match /suppliers/{supplierId} {
        allow read, write: if request.auth != null;
    }

    // Allow read/write access to inventory collection for authenticated users
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
  }
}
