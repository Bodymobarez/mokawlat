rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all collections for any authenticated user.
    // This is a permissive rule for development.
    // TODO: Secure this for production by adding role-based access control.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Explicit rules for collections can be added here.
    // For example:
    // match /users/{userId} {
    //   allow read, write: if request.auth.uid == userId;
    // }
    // match /projects/{projectId} {
    //  allow read: if request.auth != null;
    //  allow write: if resource.data.ownerId == request.auth.uid;
    // }
  }
}
