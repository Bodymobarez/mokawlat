rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Default deny all access unless specified. This is a good security practice.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User profiles
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || isAdmin();
      allow create: if isAdmin();
    }

    // Projects and their sub-collections
    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      // Tasks can be managed by any signed-in user
      match /tasks/{taskId} {
        allow read, create, update, delete: if isSignedIn();
      }

      // Documents can be managed by any signed-in user
      match /documents/{docId} {
        allow read, create, delete: if isSignedIn();
      }
      
      // Daily logs can be read and created by any signed-in user
      match /dailyLogs/{logId} {
        allow read, create: if isSignedIn();
      }
    }
    
    // Employees can be read by anyone signed in, but only managed by admins.
    match /employees/{employeeId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Clients and their sub-collections
    match /clients/{clientId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /interactions/{interactionId} {
          allow read, create, update, delete: if isSignedIn();
      }
      
      match /contracts/{contractId} {
          allow read: if isSignedIn();
          allow create, delete: if isAdmin();
      }
    }
    
    // Suppliers and their sub-collections
    match /suppliers/{supplierId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
      
      match /contracts/{contractId} {
          allow read: if isSignedIn();
          allow create, delete: if isAdmin();
      }
    }
    
    // Inventory and related settings can be read by anyone, managed by admins.
    match /inventory/{itemId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /inventoryCategories/{categoryId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /warehouses/{warehouseId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Assets can be read by anyone, managed by admins
    match /assets/{assetId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Procurement (POs) can be read by anyone, managed by admins
    match /procurement/{poId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Material requests can be read by anyone, managed by admins
    match /materialRequests/{reqId} {
        allow read: if isSignedIn();
        allow create, update, delete: if isAdmin();
    }

    // Financials can be read by anyone, managed by admins
    match /transactions/{transactionId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /invoices/{invoiceId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    match /accounts/{accountId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
    
    // Activity log is append-only for signed-in users, but can be read by anyone.
    match /activityLog/{logId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }
  }
}
