rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to contract files only for authenticated users
    match /contracts/{entityType}/{entityId}/{contractId}/{fileName} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write access to daily log photos only for authenticated users
    match /projects/{projectId}/dailyLogs/{logId}/{fileName} {
      allow read, write: if request.auth != null;
    }
  }
}
