rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files for any authenticated user.
    // Allow write access to all files for any authenticated user.
    // This is a simple rule for an internal tool. For more granular control,
    // you would add path-specific write rules.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
