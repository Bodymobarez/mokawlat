rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Contracts for clients and suppliers
    match /contracts/{entity}/{entityId}/{contractId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Daily log photos for projects
    match /projects/{projectId}/dailyLogs/{logId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Documents for projects
    match /projects/{projectId}/documents/{documentId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

  }
}
